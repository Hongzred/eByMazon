<Login>:
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_y': 0.3, 'center_x': 0.7}
        WarningLabel:
            id: loginCheck
            text:""
            size_hint_y: 0.2
        BoxLayout:
            size_hint: (0.5,0.4)
            orientation: "horizontal"
            BoldLabel:
                text: "User Name"
            InfoInput:
                id: loginUsername
                size_hint_x: 1.5
                size_hint_y: .3
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        BoxLayout:
            size_hint: (0.5,0.4)
            orientation: "horizontal"
            BoldLabel:
                pos_hint: {'center_y': 1, 'center_x': 0.5}
                text: "Password"
            InfoInput:
                id: loginPassword
                size_hint: (1.5,.3)
                pos_hint: {'center_y': 1, 'center_x': 0.5}
        BoxLayout:
            orientation: "horizontal"
            padding:(50,50)
            size_hint: (0.6,1)
            OrangeButton:
                size_hint_y: .15
                pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                text: "Login"
                on_press:
                    root.checkLogin(loginUsername.text,loginPassword.text)
            YellowButton:
                size_hint_y: .15
                pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                text: "Clear"
                on_press: root.clearLogin()
            GrayButton:
                size_hint_y: .15
                pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                text: "Cancel"
                on_press: root.cancelLogin()