#: include kvFiles/features.kv
<bought>:
    itemID:0
    itemTitle: ''
    sellerID: 0
    sellerName: ''
    price: 0
    time: ''
    ship: False

    # image:
    cols: 6
    CenterLabel:
        text: root.itemTitle
    CenterLabel:
        text: root.sellerName
    CenterLabel:
        text: '$'+str(root.price)
    CenterLabel:
        text: "Shipped" if root.ship else "Not Yet"
    CenterLabel:
        text: root.time
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 2
        GreenButton:
            disable: root.ship
            text: 'Rate'
            on_press: root.rate()
        LightRedButton:
            disable: root.ship
            text: 'Complain'
            on_press: root.complain()


<sold>:
    itemID:0
    itemTitle: ''
    buyerID: 0
    buyerName: ''
    price: 0
    time: ''
    ship: False

    # image:
    cols: 6
    CenterLabel:
        text: root.itemTitle
    CenterLabel:
        text: root.buyerName
    CenterLabel:
        text: '$'+str(root.price)
    CenterLabel:
        text: "Shipped" if root.ship else "Not Yet"
    CenterLabel:
        text: root.time
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 2
        GreenButton:
            size_hint_x:0.3
            disable: 0 if root.ship else 1
            opacity: 0 if root.ship else 1
            text: 'Accept'
            on_press: root.acceptPurchase()
        LightRedButton:
            size_hint_x:0.3
            disable: 0 if root.ship else 1
            opacity: 0 if root.ship else 1
            text: 'Decline'
            on_press: root.declinePurchase()




<transactionHistory>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.07
            orientation: "horizontal"
            height: 30
            spacing: 10
            Label:
                size_hint_x: .9
            GrayButton:
                size_hint_x: .1
                text: "Go Back"
                on_press: root.backProfile()



        BoldLabel:
            size_hint_y: .1
            text: "My Transition History"
            font_size: 100
            canvas.before:
                Color:
                    rgb: (0, 255, 255,1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        CenterLabel:
            size_hint_y: .05
            text: 'Brought Items'
            font_size: 50
            bold: True

        GridLayout:
            size_hint_y: .05
            cols: 6
            BoldLabel:
                text: 'Item Title'
            BoldLabel:
                text: 'Seller Usename'
            BoldLabel:
                text: 'Price'
            BoldLabel:
                text: 'Ship Status'
            BoldLabel:
                text: 'Deal Date'
            BoxLayout:

        RecycleView:
            size_hint_y: .5
            id: bought
            data:[]
            viewclass: 'bought'
            VRVL:
                default_size: None, dp(40)

        CenterLabel:
            size_hint_y: .05
            text: 'Sold Items'
            font_size: 50
            bold: True

        GridLayout:
            size_hint_y: .05
            cols: 6
            BoldLabel:
                text: 'Item Title'
            BoldLabel:
                text: 'Buyer Username'
            BoldLabel:
                text: 'Price'
            BoldLabel:
                text: 'Ship Status'
            BoldLabel:
                text: 'Deal Date'
            BoxLayout:
        RecycleView:
            size_hint_y: .5
            id: sold
            data:[]
            viewclass: 'sold'
            VRVL:
                default_size: None, dp(40)

<complain>:
    id: complain
    BoxLayout:
        orientation:'vertical'
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            TextInput:
                id: complain_response
                hint_text: 'Enter Your Complains'
                size_hint_y: .8
            BoxLayout:
                orientation: 'horizontal'
                spacing: 20
                Button:
                    text: 'Submit'
                    on_press: root.submitComplain()
                    background_color: (2.14, .04, .25,.7)
                Button:
                    text: 'Cancel'
                    on_press: root.toHistory()
                
<rate>:
    id: rate
    BoxLayout:
        orientation:'vertical'
        size_hint: .5, .5
        pos_hint: {'center_x': .5, 'center_y': .5}
        BoxLayout:
            TextInput:
                id: rate_response
                hint_text: 'Enter Your comments'
                size_hint_y: .8
            BoxLayout:
                orientation: 'horizontal'
                spacing: 20
                Button:
                    text: 'Submit'
                    on_press: root.submitRate()
                    background_color: (2.14, .04, .25,.7)

                Button:
                    text: 'Cancel'
                    on_press: root.toHistory()
                    

