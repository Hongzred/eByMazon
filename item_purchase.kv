#:kivy 1.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

Purchase:
    transition: FadeTransition()
    PurchasePage:
    ImageButton:
    DescriptionList:
    PurchaseButton:

<PurchasePage>:
    name: 'itemPage'
    orientation: 'vertical'
    padding: 
    spacing: 20
    BoxLayout:
        size_hint_y: 1
        orientation: 'horizontal'
        Button:
            color: 255,255,255,1

            Image:
                source: "logo3.png"
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    color: 255, 255, 255, 1
                    id: title
                    text: 'title:'
                    text_size: self.size
                    halign: 'left'
                Label:
                    text: 'this is my title'
                    text_size: self.size
                    halign: 'left'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: description
                    text: 'Description:'
                    text_size: self.size
                    halign: 'left'
                Label:
                    text: 'this is my Description'
                    text_size: self.size
                    halign: 'left'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    id: price
                    text: 'price:'
                    text_size: self.size
                    halign: 'left'
                Label:
                    text: 'this is my price'
                    text_size: self.size
                    halign: 'left'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'this is button'
            size: self.size

