#:include features.kv
<biddingItem>:
    BoxLayout:
        orientation: "vertical"
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        BoxLayout:
#                    size_hint: (0.8,0.5)
            orientation: "horizontal"
            padding:[50,0,50,0]
#                    height: 50
            Image:
                id: itemImage
                size_hint:(0.5,1)
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True

            GridLayout:
                cols: 2
                size_hint:(0.5,1)
                orientation: "vertical"

                LeftLabel:
                    text: "Title: "
                LeftLabel:
                    id: itemTitle
                LeftLabel:
                    text: "Description: "
                LeftLabel:
                    id: itemDescription
                LeftLabel:
                    text: "Start Bidding Price: "
                LeftLabel:
                    id: itemPrice
                LeftLabel:
                    text: "Current Bid: "
                LeftLabel:
                    id: itemBid
                LeftLabel:
                    text: "UsedStatus: "
                LeftLabel:
                    id: itemUsed
                LeftLabel:
                    text: "Likes: "
                LeftLabel:
                    id: itemLike
                LeftLabel:
                    text: "DisLike: "
                LeftLabel:
                    id: itemDislike
#                        Label:
#                            size_hint_y: 0.2
        # ------------- top half ------------#

        BoxLayout:
            size_hint_y: 0.3
            orientation: 'horizontal'
            spacing: 20

            Button:
                size_hint_x: 0.25
                background_color: 255, 255, 255, 1
                on_press: root.likeItem("biddingItem")
                on_press: self.background_color= 100,100,100,0.5
                Image:
                    source: "images/likeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Button:
                size_hint_x: 0.25
                background_color: 255, 255, 255, 1
                on_press: root.dislikeItem("biddingItem")
                on_press: self.background_color= 100,100,100,0.5
                Image:
                    source: "images/dislikeButton.png"
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True
            Vspace:
                size_hint_x: 0.4
            LeftLabel:
                font_size: 36
                text: 'Enter price you want bid: '
            ProfileInput:
                size_hint: (0.3,0.5)
                id: purchaseInfo
                text_size: self.size

            SkyBlueButton:
                size_hint: (0.2,0.5)
                text: "Bid"
                orientation: 'horizontal'


