<editProfile>:
    valid: False
    BoxLayout:
        orientation: 'vertical'
        size_hint: [0.8,0.8]
        pos_hint: {'center_y': .5, 'center_x': 0.5}
        BoxLayout:
            size_hint_y: 0.2
            WarningLabel:
                text: "Please don't leave anything blank.\nPlease enter valid state, phone number and card number"
                opacity: 1 if root.valid else 0
        GridLayout:
            cols: 2
            size_hint:(0.7,0.7)
            pos_hint: {'center_y': .5, 'center_x': 0.5}
            Label:
                text: 'Name'
                color: 0, 0, 0, 1
                font_size: 33
                bold: True
                text_size: self.size
                halign: 'center'
                valign:'bottom'
            InfoInput:
                id: editName
            centerBLabel:
                text: 'Phone number'
            InfoInput:
                id: editPhone
            centerBLabel:
                text: 'Email'
            InfoInput:
                id: editEmail
            centerBLabel:
                text: 'Address'
            InfoInput:
                id: editAddress
            centerBLabel:
                text: 'State'
            InfoInput:
                id: editState
            centerBLabel:
                text: 'Card Number'
            InfoInput:
                id: editCard
        BoxLayout:
            orientation: "horizontal"
            spacing: 50
            size_hint: (0.4,0.3)
            pos_hint: {'center_y': .5, 'center_x': 0.5}
            Label:
                size_hint_x: 0.2
            GrayButton:
                pos_hint: {'center_y': .7, 'center_x': 0.5}
                size_hint:(None, .25)
                width: 500
                text: "Go back"
                on_press: root.toProfile()
            OrangeButton:
                pos_hint: {'center_y': .7, 'center_x': 0.5}
                size_hint:(None, .25)
                text: "Change Info"
                width: 500
                on_press: root.changeInfo(editName.text,editCard.text,editEmail.text,editPhone.text,editAddress.text,editState.text)
