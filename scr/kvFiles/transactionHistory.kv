<bought@BoxLayout>:
    title: ''
    price: 0
    date: ''
    seller: 0
    processed: False
    # image: 
    BoxLayout:
        GridLayout:
            cols: 5
            CenterLabel:
                text: root.title
            CenterLabel:
                text: '$'+str(root.price)
            CenterLabel:
                text: str(root.seller)
            CenterLabel:
                text: root.date
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 2
                Button:
                    disable: root.processed
                    text: 'Complain' 
                    on_press: root.complain()
                    padding: 5,0
                    background_color: (2.14, .04, .25,.7)

                Button:
                    disable: root.processed
                    text: 'Rate'
                    on_press: root.rate()
                    padding: 5,0
                    background_color:(.03, 1.65, .89, .7)

            # Button:
            #     text: 'Cancel' if root.cancel else ''
            #     on_press: root.cancelPurchase() 

<sold@BoxLayout>:
    title: ''
    price: 0
    date: ''
    buyer: 0
    processed: False
    # image: 
    BoxLayout:
        GridLayout:
            cols: 5
            CenterLabel:
                text: root.title
            CenterLabel:
                text: '$'+str(root.price)
            CenterLabel:
                text: str(root.buyer)
            CenterLabel:
                text: root.date
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 2
                Button:
                    disable: root.processed
                    text: 'Accept' if not root.processed else ''
                    on_press: root.acceptPurchase()
                    padding: 5,0 
                    background_color:(.03, 1.65, .89, .7)
                Button:
                    diable: root.processed
                    text: 'Decline' if not root.processed else ''
                    on_press: root.declinePurchase()
                    padding: 5,0
                    background_color: (2.14, .04, .25,.7)

<transactionHistory>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.1
            orientation: "horizontal"
            height: 30
            spacing: 10
            Label:
                size_hint_x: .8
            GrayButton:
                size_hint_x: .2
                # size_hint_y: 
                text: "Go Back"
                on_press: root.backProfile()
                # background_color: (2.14, 1.41, .06, .7)

#    BoxLayout:
#        orientation: "vertical"
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            BoldLabel:
                text: "My Transition History"
                canvas.before:
                    Color:
                        rgb: (0, 255, 255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'seller'
                BoldLabel: 
                    text: 'date'
                BoldLabel:
                    text: ''
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'buyer'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
        BoxLayout:
            size_hint_y: 
            orientation: 'horizontal'
            RecycleView:
                id: bought
                data:[]
                viewclass: 'bought'
                VRVL:
                    default_size: None, dp(40)
            RecycleView:
                id: sold
                data:[]
                viewclass: 'sold'
                VRVL:
                    default_size: None, dp(40)

<complain>:
    id: complain
    Screen:
        BoxLayout:
            orientation:'vertical'
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}
            BoxLayout:
                TextInput:
                    id: complain_response
                    hint_text: 'Enter Your Complains'
                    size_hint_y: .8
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 20
                    Button:
                        text: 'Submit'
                        on_press: root.submitComplain()
                        background_color: (2.14, .04, .25,.7)
                    Button:
                        text: 'Cancel'
                        on_press: root.toHistory()
                
<rate>:
    id: rate
    Screen:
        BoxLayout:
            orientation:'vertical'
            size_hint: .5, .5
            pos_hint: {'center_x': .5, 'center_y': .5}
            BoxLayout:
                TextInput:
                    id: rate_response
                    hint_text: 'Enter Your comments'
                    size_hint_y: .8
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 20
                    Button:
                        text: 'Submit'
                        on_press: root.submitRate()
                        background_color: (2.14, .04, .25,.7)

                    Button:
                        text: 'Cancel'
                        on_press: root.toHistory()
                    

