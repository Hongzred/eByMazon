<FriendList>:
    name: "friendlist"
    title: "the friend list"
    BoxLayout:
        size_hint_y:1.92
        orientation: "horizontal"
        height: 15
        spacing: 10
        Label:
            text: "My friends"
            color: 0,0,0,1
    BoxLayout:
        size_hint_y: 0.05
        orientation: "horizontal"
        height: 30
        spacing: 10
