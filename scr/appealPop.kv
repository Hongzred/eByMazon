#:include features.kv
<appealPop>:
    ScreenManager:
        id: appealManager
        Screen:
            name:"askdecision"
            title: 'Appeal Form'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.6, 0.6)
                pos_hint:{'center_y': .5, 'center_x': 0.5}
                TextInput: 
                    size_hint_y: .8
                    hint_text: 'Enter your response'
                BoxLayout:
                    size_hint_y: .2
                    GrayButton:
                        text: "Appeal"
                        on_press: root.appeal()
                    BlueButton:
                        text: "Resign"
                        on_press: root.tologin()

        Screen:
            name: "appealEntry"
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.6, 0.6)
                pos_hint:{'center_y': .5, 'center_x': 0.5}
                spacing: 20
                TextInput: 
                    size_hint_y: .2
                    hint_text: 'Enter Your Appeal Message'
                TextInput:
                    size_hint_y: .7
                    hint_text: 'Enter your response'
                BlueButton:
                    text: "Submit"
                    size_hint_y: .1
                    size_hint_x: .2
                    pos_hint: {'center_x': .9}
                    on_press: root.tologin()