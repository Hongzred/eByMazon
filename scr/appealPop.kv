#:include features.kv
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<appealPop>:
    title: 'Apeal Form'
    BoxLayout:
        canvas.before:
            Color:
                rgb: (255, 255, 255)
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenManager:
            id: appealManager
            transition: FadeTransition()
            Screen:
                name:"askdecision"
                title: 'Appeal Form'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.6, 0.6)
                    spacing: 20
                    pos_hint:{'center_y': .5, 'center_x': 0.5}
                    WarningLabel:
                        size_hint_y: .8
                        pos_hint:{'center_y': .5, 'center_x': 0.5}
                        text: "You have receive 2 warning!!!\nYou are suspend by our system"
                    BoxLayout:
                        size_hint_y: .2
                        spacing: 20
                        GrayButton:
                            text: "Appeal"
                            on_press: root.switchScreen("appealEntry")
                        BlueButton:
                            text: "Resign"
                            on_press: root.switchScreen("removed")

            Screen:
                name: "appealEntry"
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.6, 0.6)
                    pos_hint:{'center_y': .5, 'center_x': 0.5}
#                    spacing: 20
                    BoldLabel:
                        size_hint_y: .2
                        text: 'Enter Your Appeal Message'
                    TextInput:
                        id: appealMessage
                        size_hint_y: .7
                        hint_text: 'Enter your response'
                    BoxLayout:
                        size_hint_y: .1
                        spacing: 20
                        orientation: 'horizontal'
                        BlueButton:
                            text: "Back"
                            pos_hint: {'center_x': .65}
                            on_press: root.switchScreen("askdecision")
                        BlueButton:
                            text: "Submit"
                            pos_hint: {'center_x': .9}
                            on_press: root.appeal(appealMessage.text)

            Screen:
                name: 'removed'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.6, 0.6)
                    pos_hint:{'center_y': .5, 'center_x': 0.5}
                    spacing: 20

                    WarningLabel:
                        text: 'Your have been removed from our system. \nYour information is now be delete!\n You are now in the blacklist.'
                        size_hint_x: .4
                        pos_hint:{'center_y': .5, 'center_x': 0.5}

                    BlueButton:
                        text: 'Confirm'
                        size_hint_y: .1
                        size_hint_x: .3
                        pos_hint: {'center_x': .9}
                        on_press: root.removeOU()

