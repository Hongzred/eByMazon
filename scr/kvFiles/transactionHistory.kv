<bought@BoxLayout>:
    title: ''
    price: ''
    date: ''
    seller: ''
    cancel: True
    # image: 
    BoxLayout:
        GridLayout:
            col: 5
            BoldLabel:
                text: root.title
            BoldLabel:
                text: root.price
            BoldLabel:
                text: root.seller
            BoldLabel:
                text: root.date
            Button:
                text: 'Cancel' if root.cancel else ''
                on_press: root.cancelPurchase() 

<sold@BoxLayout>:
    title: ''
    price: ''
    date: ''
    buyer: ''
    accept: True
    # image: 
    BoxLayout:
        GridLayout:
            col: 5
            BoldLabel:
                text: root.title
            BoldLabel:
                text: root.price
            BoldLabel:
                text: root.buyer
            BoldLabel:
                text: root.date
            Button:
                text: 'Accept' if root.accept else ''
                on_press: root.acceptPurchase() 

<transactionHistory>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            BoldLabel:
                text: "My Transition History"
                canvas.before:
                    Color:
                        rgb: (0, 255, 255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'seller'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'buyer'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
        BoxLayout:
            size_hint_y: .7
            orientation: 'horizontal'
            RecycleView:
                id: bought
                data:[]
                viewclass: 'bought'
                VRVL:
                    default_size: None, dp(20)
            RecycleView:
                id: sold
                data:[]
                viewclass: 'sold'
                VRVL:
                    default_size: None, dp(20)
    BoxLayout:
        size_hint_y: 0.05
        orientation: "horizontal"
        height: 30
        spacing: 10
        Button:
            text: "Go back"
            on_press: root.backProfile()