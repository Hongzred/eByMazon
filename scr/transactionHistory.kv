#include features.kv
<bought@BoxLayout>:
    title: ''
    price: ''
    date: ''
    seller: ''
    # image: 
    BoxLayout:
        GridLayout:
            col: 4
            CenterLabel:
                text: root.title
            CenterLabel:
                text: root.price
            CenterLabel:
                text: root.seller
            CenterLabel:
                text: root.date
            # Button:
            #     text: 'Cancel' if root.cancel else ''
            #     on_press: root.cancelPurchase() 

<sold@BoxLayout>:
    title: ''
    price: 0
    date: ''
    buyer: 0
    type: 1
    accept: True
    decline: True
    # image: 
    BoxLayout:
        GridLayout:
            col: 7
            CenterLabel:
                text: root.title
            CenterLabel:
                text: root.price
            CenterLabel:
                text: root.buyer
            CenterLabel:
                text: root.date
            Button:
                text: 'Accept' if root.accept else ''
                on_press: root.acceptPurchase() 
            Button:
                text: 'Decline' if root.decline else ''
                on_press: root.declinePurchase()

<transactionHistory>:
    BoxLayout:
        size_hint_y: 0.01
        orientation: "horizontal"
        height: 30
        spacing: 10
        Label:
            size_hint_x: .9
        Button:
            text: "Go back"
            size: 150, 100
            on_press: root.backProfile()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            BoldLabel:
                text: "My Transition History"
                canvas.before:
                    Color:
                        rgb: (0, 255, 255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'seller'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'buyer'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
        BoxLayout:
            size_hint_y: .7
            orientation: 'horizontal'
            RecycleView:
                id: bought
                data:[]
                viewclass: 'bought'
                VRVL:
                    default_size: None, dp(20)
            RecycleView:
                id: sold
                data:[]
                viewclass: 'sold'
                VRVL:
                    default_size: None, dp(20)