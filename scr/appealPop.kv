#:include features.kv
<appealPop>:
    title: 'Apeal Form'
    ScreenManager:
        id: appealManager
        Screen:
            name:"askdecision"
            title: 'Appeal Form'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.6, 0.6)
                spacing: 20
                pos_hint:{'center_y': .5, 'center_x': 0.5}
                TextInput: 
                    size_hint_y: .8
                    hint_text: 'Enter your response'
                BoxLayout:
                    size_hint_y: .2
                    spacing: 20
                    GrayButton:
                        text: "Appeal"
                        on_press: root.appeal()
                    BlueButton:
                        text: "Resign"
                        on_press: root.toconfirm()

        Screen:
            name: "appealEntry"
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.6, 0.6)
                pos_hint:{'center_y': .5, 'center_x': 0.5}
                spacing: 20
                TextInput: 
                    size_hint_y: .2
                    hint_text: 'Enter Your Appeal Message'
                TextInput:
                    size_hint_y: .7
                    hint_text: 'Enter your response'
                BoxLayout:
                    size_hint_y: .1
                    spacing: 20
                    orientation: 'horizontal'
                    BlueButton:
                        text: "Back"
                        # size_hint_y: .1
                        # size_hint_x: .2
                        pos_hint: {'center_x': .65}
                        on_press: root.tologin()
                    BlueButton:
                        text: "Submit"
                        # size_hint_y: .1
                        # size_hint_x: .2
                        pos_hint: {'center_x': .9}
                        on_press: root.tologin()
        Screen:
            name: 'removed'
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.6, 0.6)
                pos_hint:{'center_y': .5, 'center_x': 0.5}
                spacing: 20

                WarningLabel: 
                    text: 'Your have been removed from our system \nand now in the blacklist.'
                    size_hint_x: .4
                    
                BlueButton:
                    text: 'Confirm'
                    size_hint_y: .1
                    size_hint_x: .3
                    pos_hint: {'center_x': .9}
                    on_press: root.tohome()

