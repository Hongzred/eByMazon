<ouInformation@BoxLayout>
    ouID: 0
    ouName: ''
    ouPhone: 0
    ouEmail: ''
    ouCard: ''
    ouAddress: ''
    ouState: ''
    ouStatus:''
    ouRate: 0
    ouComplaint: 0
    ouWarning: 0
    orientation: "vertical"
    BoxLayout:
        size_hint_y: 0.2
        BoldLabel:
            text: "OU ID: %s" % root.ouID

    BoxLayout:
        size_hint_y: 0.8
        orientation: 'horizontal'
        BoxLayout:
            orientation: "vertical"
            padding: 250, 20, 0, 0
            LeftLabel:
                text: "Name: %s" % root.ouName
            LeftLabel:
                text: "Phone number: %s" % str(root.ouPhone)
            LeftLabel:
                text: "Email: %s" % root.ouEmail
            LeftLabel:
                text: "Card Info: %s" % root.ouCard
            LeftLabel:
                text: "Address: %s" % root.ouAddress
            LeftLabel:
                text: "State: %s" % root.ouState

        BoxLayout:
            orientation: "vertical"
            padding: 150, 0, 400, 0
            LeftLabel:
                text: "Status: %s" % root.ouStatus
            LeftLabel:
                text: "Rate: %s" % str(root.ouRate)
            LeftLabel:
                text: "Complaint: %s" % str(root.ouComplaint)
            LeftLabel:
                text: "Warning: %s" % str(root.ouWarning)
            PinkButton:
                text: "Remove"




