#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:include features.kv
# include itemFrame.kv

<Item@BoxLayout>:
    orientation: "horizontal"
    itemID:None
    image:None
    title: ""
    info:""
    priceType:None

    Button:
        size_hint_x: 0.4
        background_color: 255, 255, 255, 1
        on_press: root.searchKeyword(search_id.text)
        Image:
            texture: root.image
            y: self.parent.y
            x: self.parent.x
            size: self.parent.size
            allow_stretch: True
    BoxLayout:
        padding:[0,50,0,50]
        size_hint_x:0.6
        orientation: "vertical"
        RegLabel:
            size_hint_y: 0.2
            text: root.title
        SmallLabel:
            size_hint_y: 0.8
            text: root.info
<Manager>:
    login: False
    userID: None
    userType: -1
    ScreenManager:
        id: screenmanager
        Home:
#            id: home
            name: 'homepage'
            title: "Home Page"
            BoxLayout:
                orientation: "vertical"

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: 0.3
                    Image:
                        size_hint_x: 0.2
                        source: "logo3.png"
                        size: self.parent.size
                        allow_stretch: True
                    BoxLayout:
                        orientation: "vertical"
                        BoldLabel:
                            id: header
                            text: "Welcome to EbayMazon"
                        BoxLayout:
                            size_hint_y: 0.3
                            orientation: "horizontal"
                            TextInput:
                                id: search_id
                                size_hint_x: 0.3
                                multiline: False
                                on_hint_text: "Search Keyword"
                                on_text_validate: root.searchKeyword(search_id.text)

                            Button:
                                size_hint_x: 0.05
                                background_color: 255, 255, 255, 1
                                on_press: root.searchKeyword(search_id.text)
                                Image:
                                    source: "search.png"
                                    y: self.parent.y
                                    x: self.parent.x
                                    size: self.parent.size
                                    allow_stretch: True
                            SkyBlueButton:
                                id: loginB
                                size_hint_x: 0.1
                                text: "Login"
                                on_press: root.tologin()

                            SkyBlueButton:
                                size_hint_x: 0.1
                                text: "New User"
                                on_press: root.signup()
                                opacity: 0 if root.login else 1

                            SkyBlueButton:
                                size_hint_x: 0.1
                                text: "My Account"
                                on_press: root.toProfile()
                                opacity: 1 if root.login else 0
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: .2
                            Label:
                                text:
                BoxLayout:
                    orientation: "horizontal"
                    BoxLayout:
                        id: sort_feature
                        name: "sortNow"
                        sort: ""
                        orientation:"vertical"
                        size_hint_x: 0.3
                        pos_hint: {'center_y': 0.4, 'center_x': 0.7}
                        BoldLabel:
                            size_hint_y: 0.2
                            text: "Sort Features"
                        GridLayout:
                            cols: 2
                            row_default_height: '20dp'
                            CheckBox:
                                group: "sort_feature"
                                on_active: root.sortPop()
                            RegLabel:
                                text: "popular"
                            CheckBox:
                                group: "sort_feature"
                                on_active: root.sortRating()
                            RegLabel:
                                text: "rating"
                            CheckBox:
                                group: "sort_feature"
                                on_active: root.sortPricelh()
                            RegLabel:
                                text: "price low to high"
                            CheckBox:
                                group: "sort_feature"
                                on_active: root.sortPricehl()
                            RegLabel:
                                text: "price high to low"
                        Label:
                            size_hint_y: 0.4
                    Label:
                        size_hint_x: 0.1
                    RecycleView:
                        id: rv
                        data:[]
                        viewclass: 'Item'
                        RVL:
        Login:
#            id: login
            name: 'loginpage'
            title: "Login Page"
            BoxLayout:
                orientation: "vertical"
                pos_hint: {'center_y': 0.3, 'center_x': 0.7}
                WarningLabel:
                    id: loginCheck
                    text:""
                    size_hint_y: 0.2
                BoxLayout:
                    size_hint: (0.5,0.4)
                    orientation: "horizontal"
                    BoldLabel:
                        text: "User Name"
                    InfoInput:
                        size_hint_x: 1.5
                        size_hint_y: .3
                        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                        id: username
                BoxLayout:
                    size_hint: (0.5,0.4)
                    orientation: "horizontal"

                    BoldLabel:
                        pos_hint: {'center_y': 1, 'center_x': 0.5}
                        text: "Password"
                    InfoInput:
                        size_hint: (1.5,.3)
                        pos_hint: {'center_y': 1, 'center_x': 0.5}
                        id: password

                BoxLayout:
                    orientation: "horizontal"
                    padding:(50,50)
                    size_hint: (0.6,1)
                    OrangeButton:
                        size_hint_y: .15
                        pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                        text: "Login"
                        on_press:
                            root.checkLogin(username.text,password.text)

                    YellowButton:
                        size_hint_y: .15
                        pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                        text: "Clear"
                        on_press: username.text =""
                        on_press: password.text =""
                    GrayButton:
                        size_hint_y: .15
                        pos_hint: {'center_y': 1.3, 'center_x': 0.5}
                        text: "Cancel"
                        on_press: root.tohome()

        Signup:
#            id: signup
            name: "signupPage"
            title: "Sign Up"
            BoxLayout:
                pos_hint: {'center_y': 0.5, 'center_x': 0.6}
                orientation: "vertical"
                WarningLabel:
                    id: userRepeat
                    text: ""
                BoxLayout:
                    orientation: 'horizontal'
                    GridLayout:
                        rows: 7
                        cols: 2
                        BoldLabel:
                            text: 'username'
                        InfoInput:
                            id: GUusername
                            on_text_validate: root.checkUsername(GUusername.text)
                        BoldLabel:
                            text: 'name'
                        InfoInput:
                            id: GUname
                        BoldLabel:
                            text: 'Phone number'
                        InfoInput:
                            id: GUphone
                        BoldLabel:
                            text: 'Email'
                        InfoInput:
                            id: GUemail
                        BoldLabel:
                            text: 'Address'
                        InfoInput:
                            id: GUaddress
                        BoldLabel:
                            text: 'State'
                        InfoInput:
                            id: GUState
                        BoldLabel:
                            text: 'Card Number'
                        InfoInput:
                            id: GUcard
                    BoxLayout:
                        size_hint_x: .5
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.7
                    Label:
                        size_hint_x: .2
                    OrangeButton:
                        text: "Sign Up"
                        on_press:root.signUp(GUusername.text, GUname.text, GUphone.text,GUemail.text, GUaddress.text,GUState.text,GUcard.text)
                        pos_hint: {'center_y': .7, 'center_x': 0}
                        size_hint_y: .15
                    YellowButton:
                        text: "Clear"
                        pos_hint: {'center_y': .7, 'center_x': 0}
                        size_hint_y: .15
                        on_press: firstName.text =""
                        on_press: lastName.text =""
                        on_press: email.text =""
                        on_press: username.text =""
                    GrayButton:
                        text: "Cancel"
                        on_press:root.tohome()
                        pos_hint: {'center_y': .7, 'center_x': 0}
                        size_hint_y: .15

        OUprofile:
#            id: ouInfo
            name: "profilePage"
            title: "The OS Profile"
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y:0.10
                    height: 15
                    spacing: 10
                    RegLabel:
                        size_hint_x:0.9
                        text: "My Account"
                    PinkButton:
                        size_hint_x:0.1
                        text:"go back"
                        on_press: root.tohome()
                BoxLayout:
                    orientation: "horizontal"
                    height: 15
                    spacing: 10
                    size_hint_y:0.90

                    BoxLayout:
                        orientation:"vertical"
                        size_hint_x:0.4
                        size_hint_y:0.8
                        padding: 50
                        Label:
                            size_hint_y: 0.3
                        RegLabel:
                            text:"name:xxx"
                        RegLabel:
                            text:"phone number:xxxxxxxx"
                        RegLabel:
                            text:"address:xxxxxxx"
                        RegLabel:
                            text:"State:xx"
                        RegLabel:
                            text:"Status:xx"
                        RegLabel:
                            text:"Rating:xx"
                        BlueButton:
                            text: "Edit"
                            on_press: root.editInfo()
                        Label:
                            size_hint_y: 0.2
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x:0.2

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x:0.3
                        spacing: 10
                        Label:
                            size_hint_y:0.1
                        OrangeButton:
                            size_hint_y: 0.1
                            text: "Friend List"
                            on_press: root.friendLst()
                        OrangeButton:
                            size_hint_y: 0.1
                            text: "History"
                            on_press: root.history()
                        OrangeButton:
                            size_hint_y: 0.1
                            text: "My item"
                        OrangeButton:
                            size_hint_y: 0.1
                            text: "Warning"

        FriendList:
#            id: friend
            name: "friendPage"
            title: "the friend list"
            BoxLayout:
                size_hint_y:1.92
                orientation: "horizontal"
                height: 15
                spacing: 10
                RegLabel:
                    text: "My friends"
            BoxLayout:
                size_hint_y: 0.05
                orientation: "horizontal"
                height: 30
                spacing: 10
                Button:
                    text: "Go back"
                    on_press: root.toProfile()
        History:
            id: history
            name: "historyPage"
            title: "the history"
            BoxLayout:
                size_hint_y:1.92
                orientation: "horizontal"
                height: 15
                spacing: 10
                Label:
                    text: "My Transition History"
                    color: 0,0,0,1
            BoxLayout:
                size_hint_y: 0.05
                orientation: "horizontal"
                height: 30
                spacing: 10
                Button:
                    text: "Go back"
                    on_press: root.toProfile()

        EditProfile:
#            id: editProfile
            name: "editPage"
            title: "to edit profile"
            BoxLayout:
                orientation: 'vertical'
                size_hint: [0.8,0.8]
                pos_hint: {'center_y': .3, 'center_x': 0.5}
                GridLayout:
                    rows: 6
                    cols: 2
                    BoldLabel:
                        text: 'name'
                    InfoInput:
                        id: name
                    BoldLabel:
                        text: 'Phone number'
                    InfoInput:
                        id: phone_number
                    BoldLabel:
                        text: 'Email'
                    InfoInput:
                        id: email
                    BoldLabel:
                        text: 'Address'
                    InfoInput:
                        id: address
                    BoldLabel:
                        text: 'State'
                    InfoInput:
                        id: State
                    BoldLabel:
                        text: 'Card Number'
                    InfoInput:
                        id: cardNum
                BoxLayout:
                    orientation: "horizontal"
                    spacing: 50
                    Label:
                        size_hint_x: 0.2
                    GrayButton:
                        pos_hint: {'center_y': .7, 'center_x': 0.5}
                        size_hint:(None, .25)
                        width: 500
                        text: "Go back"
                        on_press: root.toProfile()
                    OrangeButton:
                        pos_hint: {'center_y': .7, 'center_x': 0.5}
                        size_hint:(None, .25)
                        width: 500
                        text: "Save"
                        on_press: root.toProfile()