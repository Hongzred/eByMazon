#:include features.kv
# Image Boxlayout of ouItem

<itemPost@Screen>:
    orientation: "horizontal"
    image:None
    title: ""
    priceType:None
    price: ""
    typeStr: ""
    description: ""

    BoxLayout:
        orientation: "horizontal"
        canvas.before:
            Color:
                rgb: (102, 255, 255) if root.priceType else (255, 204, 255)
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            size_hint_x: 0.4
            background_color: 255, 255, 255, 1
            on_press: root.getItem()
            Image:
                texture: root.image
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                allow_stretch: True
        BoxLayout:
            pos_hint: {'center_y': 0.4, 'center_x': 0.7}
            padding:[0,50,0,50]
            size_hint_x:0.6
            orientation: "vertical"
            BoldLabel:
                size_hint_y: 0.2
                text: root.title
            GridLayout:
                cols: 2
                size_hint_x:0.4
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                SmallLabel:
                    text: "Price Type: "
                SmallLabel:
                    text: root.typeStr
                SmallLabel:
                    text: "Price: "
                SmallLabel:
                    text: "$"+root.price
                SmallLabel:
                    text: "Description: "
                SmallLabel:
                    text: root.description

