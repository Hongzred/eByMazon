<bought@BoxLayout>:
    title: ''
    price: 0
    date: ''
    seller: 0
    # image: 
    BoxLayout:
        GridLayout:
            cols: 4
            CenterLabel:
                text: root.title
            CenterLabel:
                text: '$'+str(root.price)
            CenterLabel:
                text: str(root.seller)
            CenterLabel:
                text: root.date
            CenterLabel:
            # Button:
            #     text: 'Cancel' if root.cancel else ''
            #     on_press: root.cancelPurchase() 

<sold@BoxLayout>:
    title: ''
    price: 0
    date: ''
    buyer: 0
    processed: False
    # image: 
    BoxLayout:
        GridLayout:
            cols: 6
            CenterLabel:
                text: root.title
            CenterLabel:
                text: '$'+str(root.price)
            CenterLabel:
                text: str(root.buyer)
            CenterLabel:
                text: root.date
            Button:
                text: 'Accept' if not root.processed else ''
                on_press: root.acceptPurchase()
                padding: 5,0 
            Button:
                text: 'Decline' if not root.processed else ''
                on_press: root.declinePurchase()
                padding: 5,0

<transactionHistory>:
    BoxLayout:
        size_hint_y: 0.1
        orientation: "horizontal"
        height: 30
        spacing: 10
        Label:
            size_hint_x: .8
        Button:
            size_hint_x: .2
            text: "Go back"
            # size: 150, 100
            on_press: root.backProfile()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            BoldLabel:
                text: "My Transition History"
                canvas.before:
                    Color:
                        rgb: (0, 255, 255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'seller'
                BoldLabel: 
                    text: 'date'
                BoldLabel:
                    text: ''
                BoldLabel: 
                    text: 'title'
                BoldLabel: 
                    text: 'price'
                BoldLabel: 
                    text: 'buyer'
                BoldLabel: 
                    text: 'date'
                BoldLabel: 
                    text: ''
        BoxLayout:
            size_hint_y: .7
            orientation: 'horizontal'
            RecycleView:
                id: bought
                data:[]
                viewclass: 'bought'
                VRVL:
                    default_size: None, dp(20)
            RecycleView:
                id: sold
                data:[]
                viewclass: 'sold'
                VRVL:
                    default_size: None, dp(20)