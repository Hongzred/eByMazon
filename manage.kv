                Label:
                    size_hint_y: 0.1
                    text:"phone number:xxxxxxxx"
                    color: 0,0,0,1
                Label:
                    size_hint_y: 0.1
                    text:"address:xxxxxxx"
                    color: 0,0,0,1
                Label:
                    size_hint_y: 0.1
                    text:"State:xx"
                    color: 0,0,0,1
                Label:
                    size_hint_y: 0.1
                    text:"Status:xx"
